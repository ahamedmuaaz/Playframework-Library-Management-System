# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                             controllers.HomeController.index

GET    /readerlist                    controllers.HomeController.readerList

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                    controllers.Assets.versioned(path="/public", file: Asset)

GET    /generate                         controllers.HomeController.generate

POST  /additem                           controllers.HomeController.additem


GET   /return/:isbn                      controllers.HomeController.returnItem(isbn:String)

GET   /displayreservation               controllers.HomeController.displayReservations





POST /addreader                          controllers.HomeController.addReader

POST   /                                 controllers.HomeController.login


DELETE /delete/:isbn                     controllers.HomeController.DeletItem(isbn:String)

DELETE /deletereader/:id                 controllers.HomeController.deleteReader(id:String)

DELETE /deletereserv/:id                 controllers.HomeController.deleteReservation(id:String)

POST /borrow                             controllers.HomeController.borrow

POST /reserve                            controllers.HomeController.reserve